<Window x:Class="gametop.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gametop"
        mc:Ignorable="d"
        Title="Window1" Height="1080" Width="1900" WindowState="Maximized" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" Closed="Window_Closed" WindowStyle="None">
    <Viewbox Stretch="Fill">
        <Canvas x:Name="myCanvas" HorizontalAlignment="Center" Height="1080" VerticalAlignment="Center" Width="1924">
            <Label x:Name="txtAmmo" Content="Ammo: 0" Height="54" Canvas.Left="23" Canvas.Top="44" Width="222" FontSize="36" FontWeight="Bold" FontFamily="Segoe Script" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="txtScore" Content="Kills: 0" Height="54" Canvas.Left="429" Canvas.Top="44" Width="223" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Segoe Script"/>
            <Label x:Name="txtHealth" Content="Health:" Height="54" Canvas.Left="1402" Canvas.Top="44" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" FontFamily="Segoe Script" FontWeight="Bold"/>
            <ProgressBar x:Name="healthBar" Height="40" Canvas.Left="1580" Canvas.Top="51" Width="280" HorizontalAlignment="Left" VerticalAlignment="Top" Value="100"/>
            <Label x:Name="txtCoins" Content="Coins: 0" Height="54" Canvas.Left="800" Canvas.Top="44" Width="233" FontSize="36" FontWeight="Bold" FontFamily="Segoe Script" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="key" Height="62" Canvas.Left="292" Canvas.Top="629" Width="46" Source="/ключ.png"/>
            <Rectangle x:Name="door" Height="60" Canvas.Left="1552" Stroke="Black" Canvas.Top="1020" Width="220" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image x:Name="nps" Height="364" Canvas.Left="1195" Canvas.Top="248" Width="258" Source="/nps.png"/>
            <Image x:Name="player" Height="166" Canvas.Left="664" Canvas.Top="798" Width="126" Source="/down.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
    </Viewbox>
</Window>
