<Window x:Class="gametop.pause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gametop"
        mc:Ignorable="d"
        Title="pause" Height="450" Width="350" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Viewbox Stretch="Fill">
        <Canvas x:Name="myCanvas" Height="450" Width="350">
            <Button x:Name="contbut" Content="Продолжить" Height="39" Canvas.Left="105" Canvas.Top="217" Width="143" Click="Button_Click"/>
            <Button x:Name="exitbut" Content="Выход" Height="39" Canvas.Left="105" Canvas.Top="304" Width="143" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click_1"/>
        </Canvas>
    </Viewbox>
</Window>
